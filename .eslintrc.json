{
    "extends": "google",
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "arrow-parens": ["error", "as-needed"],
        "max-len": ["error", { "code": 120 }],
        "linebreak-style": ["error", "unix"],
        "padded-blocks": "off"
    }
}